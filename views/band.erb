<h1><%= @band.name() %></h1>

<ul class="list-unstyled">
  <% if @band.venues().any?() %>
    <% @band.venues().each() do |venue| %>
      <li><a href="/venues/<%= venue.id() %>"><%= venue.name() %></a></li>
    <% end %>
  <% end %>
</ul>

<h3>Book a Venue:</h3>
<% if @venues.any?() %>
  <form action="/bands/<%= @band.id %>" method="post">
    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>
    <button type="submit" class='btn-sm btn-success'>Book Venue</button>
  </form>
<% else %>
  <p><a href="/venues">Add a venue!</a></p>
<% end %>

<form action="/bands/edit/<%= @band.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input id="update_name" name="update_name" placeholder="Update Band Name">
  <button type="submit" class="btn-xm btn-default">Edit Band</button>
</form>

